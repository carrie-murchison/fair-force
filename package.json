{
  "name": "fair-force",
  "version": "1.0.0",
  "description": "Fair Force - Software Testing Services and Training",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/css && cp src/css/styles.css dist/css && cp -R src/assets dist",
    "dev": "webpack serve --config webpack.config.js --open"
  },
  "keywords": [
    "fair force",
    "software testing",
    "training",
    "mentoring",
    "QA tester"
  ],
  "author": "Carrie Murchison",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/node": "^16.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "typescript": "^4.4.3",
    "webpack": "^5.82.1",
    "webpack-cli": "^5.1.1"
  }
}
